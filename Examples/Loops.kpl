import Core:System.Console;

procedure Loop {
	datum i::?UInt64 {0}
	loop {
		Console:WriteFormatted("i = {}", \(i));
	}
}

procedure While(i::UInt64) {
	loop \(i--) > 0 {
		Console:WriteFormatted("i = {}", i);
	}
}

procedure Do(i::UInt64) {
	loop \(i-- > 0) {
		Console:WriteFormatted("i = {}", i);
	}
}

procedure For(n::UInt64) {
	datum i::?UInt64 {0}
	loop \(i++) < n {
		Console:WriteFormatted("i = {}", i);
	}
}
